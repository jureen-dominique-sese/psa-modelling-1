from unit_converter import ConductorUnitConverter

def main():
    conv = ConductorUnitConverter()
    print("üîå Electrical Engineering Unit Converter")
    print("Type 'exit' anytime to quit.\n")
    while True:

        raw_value = input("Enter value: ")
        if raw_value.lower() == "exit":
            break
        try:
            value = float(raw_value)
        except ValueError:
            print("‚ùå Please enter a number.")
            continue
        from_unit = input("From unit: ").strip()
        if from_unit.lower() == "exit":
            break
        to_unit = input("To unit: ").strip()
        if to_unit.lower() == "exit":
            break
  
        try:
            result = conv.convert(value, from_unit, to_unit)
            print(f"‚úÖ {value} {from_unit} = {result:.6g} {to_unit}\n")
        except ValueError as e:
            print("‚ùå Error:", e, "\n")

if __name__ == "__main__":
    main()
